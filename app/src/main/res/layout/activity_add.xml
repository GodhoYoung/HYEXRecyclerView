<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#fdfdfd"
    android:paddingLeft="15dp"
    android:paddingBottom="5dp"
    android:paddingRight="15dp"
    >
    <Button
        android:id="@+id/btnComplete"
        android:text="Complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="10dp"
        android:textColor="#fff"
        android:background="@drawable/hyrect"
        android:backgroundTint="@color/colorPrimaryDark"
        />
    <ScrollView
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_Image_add"
        android:layout_width="match_parent"
        android:background="@drawable/hyrect"
        android:backgroundTint="#242424"
        android:layout_height="150dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_below="@id/iv_Image_add"
        android:padding="3dp"
        android:background="@drawable/hyrect"
        android:backgroundTint="@color/colorPrimaryDark"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/hyrect"
            android:padding="5dp"
            >
        <TextView
            android:id="@+id/tv_UserName_add"
            android:hint="UserName"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
            android:textColor="#8447e6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#767676"
            ></View>
        <EditText
            android:id="@+id/tv_PostText_add"
            android:hint="내용을 입력하세요."
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
            android:lines="10"
            android:minLines="5"
            android:maxLines="10"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"

            />
    </LinearLayout>
</LinearLayout>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>